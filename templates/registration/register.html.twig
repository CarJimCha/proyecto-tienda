{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Registro</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.characterName,  { label: 'Nombre del personaje'}) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Contraseña'}) }}
        {{ form_row(registrationForm.balance, {label: 'Dinero inicial'}) }}

        <button type="submit" class="btn">Registrarse</button>
    {{ form_end(registrationForm) }}

    <br>
    <a href="{{ path('index') }}" class="btn btn-primary">Página de inicio</a>

{% endblock %}


