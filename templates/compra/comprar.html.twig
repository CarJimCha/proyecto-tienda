{% extends 'base.html.twig' %}

{% block title %}Comprar {{ item.nombre }}{% endblock %}

{% block body %}
    <h1>Detalles de la compra</h1>

    <div class="mb-3">
        <p>Eres {{ app.user.userIdentifier }} y tienes {{ app.user.getFormattedBalance() }}.</p>
    </div>

    <div class="mb-3">
        <h2>{{ item.nombre }}</h2>
        <p><strong>Categoría:</strong> {{ item.categoria }}</p>

        <p><strong>Precio:</strong> {{ item.getFormattedPrecio }}.</p>
    </div>

    <form method="post" action="{{ path('app_compra') }}">
        <div class="mb-3">
            <label for="cantidad" class="form-label">Cantidad:</label>
            <input type="number" id="cantidad" name="cantidad" value="1" min="1" class="form-control">
        </div>
        <br>

        <input type="hidden" name="item_id" value="{{ item.id }}">

        <button type="submit" class="btn btn-success">Comprar</button>
    </form>

    <br>

    <p><a href="{{ path('app_compra') }}" class="btn btn-primary">Volver al Catálogo</a></p>
    <p><a href="{{ path('index') }}" class="btn btn-primary">Volver a Inicio</a></p>
{% endblock %}
