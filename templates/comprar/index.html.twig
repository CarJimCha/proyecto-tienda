{% extends 'base.html.twig' %}

{% block title %}Compra de Artículos{% endblock %}

{% block body %}
    <h1>Compra de Artículos</h1>

    <form method="get" class="mb-3">
        <input type="text" name="nombre" value="{{ nombre }}" placeholder="Buscar por nombre">

        <select name="categoria">
            <option value="">Todas las categorías</option>
            {% for categoria in categorias %}
                <option value="{{ categoria.id }}" {% if categoria.id == categoriaId %}selected{% endif %}>
                    {{ categoria.nombre }}
                </option>
            {% endfor %}
        </select>

        <select name="sort">
            <option value="i.nombre"   {% if sortField == 'i.nombre'   %}selected{% endif %}>Nombre</option>
            <option value="i.precio"   {% if sortField == 'i.precio'   %}selected{% endif %}>Precio (asc)</option>
            <option value="i.precio_DESC"   {% if sortField == 'i.precio_DESC'   %}selected{% endif %}>Precio (desc)</option>
            <option value="c.nombre" {% if sortField == 'c.nombre' %}selected{% endif %}>Categoría</option>
        </select>

        <button type="submit">Filtrar</button>
    </form>

    {% include 'componentes/_selector_paginacion.html.twig' %}

    <br>

    <table>
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoría</th>
            <th>Comprar</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.nombre }}</td>
                <td>{{ item.getFormattedPrecio() }}</td>
                <td>{{ item.categoria.nombre }}</td>
                <td>
                    <a href="{{ path('comprar', {'id': item.id}) }}" class="btn btn-outline-danger" title="Comprar">
                        <img src="{{ asset('images/coins-solid.svg') }}" alt="PDF" width="20" style="vertical-align: middle;">
                    </a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="4">No se encontraron objetos.</td></tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(items) }}
{% endblock %}
