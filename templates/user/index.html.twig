{% extends 'base.html.twig' %}

{% block title %}Gestión de Usuarios{% endblock %}

{% block body %}
    <h1>Gestión de Usuarios</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Balance</th>
                <th>Usuario</th>
                <th>Administrador</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.characterName }}</td>
                <td>{{ user.balance }}</td>

                <td><input type="checkbox" {% if 'ROLE_USER' in user.roles %}checked{% endif %} disabled></td>
                <td><input type="checkbox" {% if 'ROLE_ADMIN' in user.roles %}checked{% endif %} disabled></td>

                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn-compra">Mostrar</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-compra">Editar</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-compra">Nueva contraseña</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No hay usuarios registrados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p><a href="{{ path('app_user_new') }}">Crear Nuevo Usuario</a></p>

    <a href="{{ path('index') }}" class="btn btn-primary">Volver al Inicio</a>
{% endblock %}
