{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>CharacterName</th>
                <td>{{ user.characterName }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% if 'ROLE_USER' in user.roles %}
                        {% if 'ROLE_ADMIN' in user.roles %}
                            Usuario, Administrador
                        {% else %}
                            Usuario
                        {% endif %}
                    {% else %}
                        {% if 'ROLE_ADMIN' in user.roles %}
                            Administrador
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ user.balance }}</td>
            </tr>
        </tbody>
    </table>

    <p><a href="{{ path('app_user_index') }}">Volver a la lista de Usuarios</a></p>

    <p><a href="{{ path('app_user_edit', {'id': user.id}) }}">Editar</a></p>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
