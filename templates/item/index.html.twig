{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <h1>Item index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Calidad</th>
                <th>Categoria</th>
                <th>Peso</th>
                <th>Botones</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.nombre }}</td>
                <td>{{ item.precio }}</td>
                <td>{{ item.calidad }}</td>
                <td>{{ item.categoria }}</td>
                <td>{{ item.peso }}</td>
                <td>
                    <a href="{{ path('app_item_show', {'id': item.id}) }}">Mostrar</a>
                    <a href="{{ path('app_item_edit', {'id': item.id}) }}">Editar</a>
                    <a href="{{ path('app_item_delete', {'id': item.id}) }}">Borrar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_item_new') }}">Create new</a>
{% endblock %}
