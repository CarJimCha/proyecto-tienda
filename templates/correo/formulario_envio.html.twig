{% extends 'base.html.twig' %}

{% block title %}Enviar inventario{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Enviar inventario de {{ usuario.characterName }}</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <p>{{ message|raw }}</p>
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                <p>{{ message|raw }}</p>
            </div>
        {% endfor %}

        <form method="post" class="form-estilizado">
            <div class="form-group">
                <label for="email">Direcci√≥n de correo:</label>
                <input type="email" name="email" id="email" class="form-control" required placeholder="ejemplo@correo.com">
            </div>
            <button type="submit" class="btn">Enviar inventario</button>
        </form>

        <a href="{{ path('app_inventario', { id: usuario.id }) }}" class="btn">Volver</a>
    </div>
{% endblock %}

